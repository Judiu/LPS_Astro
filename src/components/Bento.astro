---
import BentoItem from "./BentoItem.astro";
import Link from "react-dom";

import { getI18N } from "../i18n/";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<style>
    .fondo {
        background-image: url("../PlanoCAD.jpg");
        background-size: cover;
    }
</style>

<div class="fondo">
    <section
        class={`
        w-full max-w-[1400px]
        grid lg:grid-cols-10 auto-rows-[30rem] gap-4
        mx-auto p-6 md:p-12 lg:p-20
      `}
    >
        <!-- Item 1 -->
        <a href="./ferroscan" class="col-span-10 md:col-span-6">
            <BentoItem
                class="h-full"    
                title={i18n?.BENTO_1_TITLE}
                subtitle={i18n?.BENTO_1_SUBTITLE}
            >
                <div
                    slot="image"
                    class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                    style="background-image: url('./Ferroscan.jpg');"
                >
                </div>
                <p
                    slot="content"
                    class="max-w-xl text-white hidden sm:block"
                    set:html={i18n?.BENTO_1_ARTICLE}
                />
            </BentoItem>
        </a>
        <!-- Item 2 -->
        <a href="" class="col-span-10 md:col-span-4">
            <BentoItem
            class="h-full"
            title={i18n?.BENTO_2_TITLE}
            subtitle={i18n?.BENTO_2_SUBTITLE}
        >
            <div
                slot="image"
                class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                style="background-image: url('./Patologia.jpg')"
            >
            </div>
            <p
                slot="content"
                class="max-w-xl text-white hidden sm:block"
                set:html={i18n?.BENTO_2_ARTICLE}
            />
        </BentoItem>
        </a>
        <!-- Item 3 -->
        <a href="" class="col-span-10 md:col-span-4">
            <BentoItem
            class="h-full"
            title={i18n?.BENTO_3_TITLE}
            subtitle={i18n?.BENTO_3_SUBTITLE}
        >
            <div
                slot="image"
                class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                style="background-image: url('./Estudiosdesuelos.jpg')"
            >
            </div>
            <p
                slot="content"
                class="max-w-xl text-white hidden sm:block"
                set:html={i18n?.BENTO_3_ARTICLE}
            />
        </BentoItem>
        </a>
        <!-- Item 4 -->
        <a href="" class="col-span-10 md:col-span-6">
            <BentoItem
            class="h-full"
            title={i18n?.BENTO_4_TITLE}
            subtitle={i18n?.BENTO_4_SUBTITLE}
        >
            <div
                slot="image"
                class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                style="background-image: url('./Licencias.jpg')"
            >
            </div>
            <p
                slot="content"
                class="max-w-xl text-white hidden sm:block"
                set:html={i18n?.BENTO_4_ARTICLE}
            />
        </BentoItem>
        </a>
        <!-- Item 5 -->
        <a href="/CalculoEstructural" class="col-span-10 md:col-span-6">
            <BentoItem
            class="h-full"
            title={i18n?.BENTO_5_TITLE}
            subtitle={i18n?.BENTO_5_SUBTITLE}
        >
            <div
                slot="image"
                class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                style="background-image: url('./CalculoEST.webp')"
            >
            </div>
            <p
                slot="content"
                class="max-w-xl text-white hidden sm:block"
                set:html={i18n?.BENTO_5_ARTICLE}
            />
        </BentoItem>
        </a>
        <!-- Item 6 -->
        <a href="" class="col-span-10 md:col-span-4">
