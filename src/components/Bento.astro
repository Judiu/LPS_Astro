            class="h-full"
            title={i18n?.BENTO_6_TITLE}
            subtitle={i18n?.BENTO_6_SUBTITLE}
        >
            <div
                slot="image"
                class="absolute left-0 top-0 bottom-0 w-full h-full group-hover:scale-110 transition-scale duration-1000 ease-in-out opacity-90 bg-blend-luminosity bg-center bg-cover bg-no-repeat z-0"
                style="background-image: url('./Render.jpg')"
            >
            </div>
            <p
                slot="content"
                class="max-w-xl text-white hidden sm:block"
                set:html={i18n?.BENTO_6_ARTICLE}
            />
        </BentoItem>
        </a>
    </section>
</div>
